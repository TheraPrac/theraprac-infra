[Unit]
Description=Ziti Router
Documentation=https://openziti.github.io/
After=network-online.target ziti-controller.service
Wants=network-online.target
Requires=ziti-controller.service

[Service]
Type=simple
WorkingDirectory={{ ziti_router_dir }}

# Wait for controller to be fully ready
ExecStartPre=/bin/sleep 5

ExecStart={{ ziti_bin }} router run {{ ziti_router_dir }}/router.yaml

Restart=always
RestartSec=5
TimeoutStartSec=120

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=ziti-router

# Resource limits
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
